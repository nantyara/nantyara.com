---
import Header from '../components/Header.astro';
import HamburgerMenu from '../components/HamburgerMenu.astro';
import '../styles/main.css';

interface Props {
  title?: string;
}

const { title = 'なんちゃらアイドル' } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
const isTopPage = currentPath === '/';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0A0A0A">
    <meta name="description" content="なんちゃらアイドル公式サイト - スケジュール・ライブ情報">

    <!-- PWA対応 -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="なんちゃら">

    <title>{title}</title>
    <slot name="head" />

    <!-- Favicon & Icons -->
    <link rel="icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/pwa-icons/apple-touch-icon.png">

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Yusei+Magic&family=Rampart+One&family=RocknRoll+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script is:inline>
      try {
        var pos = localStorage.getItem('menu-button-position');
        if (pos === 'left') document.documentElement.setAttribute('data-menu-position', 'left');
      } catch(e) {}
    </script>
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js', { scope: '/' })
            .then(reg => console.log('SW registered:', reg))
            .catch(err => console.log('SW registration failed:', err));
        });
      }
    </script>
  </head>
  <body class="scanlines vhs-distortion">
    <HamburgerMenu currentPath={currentPath} />
    <Header />
    <div class="site-container">
      <main class="main">
        <slot />
      </main>
    </div>
    <footer class="footer">
      <p>&copy; 2018-2026 なんちゃらアイドル</p>
    </footer>
  </body>
</html>
