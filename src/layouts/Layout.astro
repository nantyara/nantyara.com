---
import Header from '../components/Header.astro';
import HamburgerMenu from '../components/HamburgerMenu.astro';
import '../styles/main.css';

interface Props {
  title?: string;
}

const { title = 'なんちゃらアイドル' } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
const isTopPage = currentPath === '/';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0A0A0A">
    <meta name="description" content="なんちゃらアイドル公式サイト - 80-90年代レトロビンテージな音楽ユニット。ライブスケジュール、リリース情報、メンバー紹介など。">
    <meta property="og:title" content={title}>
    <meta property="og:description" content="なんちゃらアイドル公式サイト - 80-90年代レトロビンテージな音楽ユニット">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://nantyara.com">
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Yusei+Magic&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <slot name="head" />
  </head>
  <body class="scanlines vhs-distortion">
    <HamburgerMenu currentPath={currentPath} />
    <Header />
    <div class="site-container">
      <main class="main">
        <slot />
      </main>
    </div>
    <footer class="footer">
      <p>&copy; 2018-2026 なんちゃらアイドル</p>
    </footer>
  </body>
</html>
