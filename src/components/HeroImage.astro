// src/components/HeroImage.astro
---

<div class="hero-container">
  <div class="hero-image-wrapper">
    <img
      src="/img/hero.png"
      alt="なんちゃらアイドル - OFFICIAL WEBSITE"
      class="hero-image"
      loading="eager"
      width="1600"
      height="600"
    />
    <div class="hero-scanlines"></div>
    <div class="hero-vhs-effect"></div>
  </div>
</div>

<style>
  .hero-container {
    width: 100%;
    margin: 0 auto;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .hero-image-wrapper {
    position: relative;
    width: 100%;
    background: var(--bg-dark);
    border: 3px solid var(--retro-pink);
    box-shadow:
      0 0 20px rgba(255, 110, 199, 0.5),
      inset 0 0 30px rgba(0, 0, 0, 0.3);
  }

  .hero-image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    filter:
      contrast(1.05)
      saturate(1.1);
  }

  /* スキャンライン */
  .hero-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.1),
      rgba(0, 0, 0, 0.1) 1px,
      transparent 1px,
      transparent 3px
    );
    pointer-events: none;
    z-index: 2;
  }

  /* VHS効果 */
  .hero-vhs-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 255, 0.03) 25%,
      transparent 50%,
      rgba(0, 255, 255, 0.03) 75%,
      transparent 100%
    );
    animation: vhs-shift 4s infinite;
    pointer-events: none;
    z-index: 1;
  }

  @keyframes vhs-shift {
    0%, 100% { transform: translateX(0); }
    33% { transform: translateX(3px); }
    66% { transform: translateX(-3px); }
  }

  /* ホバーエフェクト（デスクトップのみ） */
  @media (hover: hover) {
    .hero-image-wrapper:hover .hero-image {
      filter:
        contrast(1.1)
        saturate(1.2)
        hue-rotate(2deg);
    }

    .hero-image-wrapper:hover {
      box-shadow:
        0 0 30px rgba(255, 110, 199, 0.7),
        0 0 50px rgba(0, 255, 255, 0.3),
        inset 0 0 30px rgba(0, 0, 0, 0.3);
    }
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .hero-container {
      padding: 0 10px;
    }

    .hero-image {
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 480px) {
    .hero-image {
      aspect-ratio: 4 / 3;
    }

    .hero-image-wrapper {
      border-width: 2px;
    }
  }
</style>
