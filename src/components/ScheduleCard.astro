---
interface Props {
  date: Date;
  title: string;
  site: string;
  content: string;
  images?: string[];
  slug?: string;
}

const { date, title, site, content, images, slug } = Astro.props;

// Êó•‰ªò„Éï„Ç©„Éº„Éû„ÉÉ„Éà
const formatDate = (d: Date) => {
  const year = d.getFullYear();
  const month = String(d.getMonth() + 1).padStart(2, '0');
  const day = String(d.getDate()).padStart(2, '0');
  const weekdays = ['Êó•', 'Êúà', 'ÁÅ´', 'Ê∞¥', 'Êú®', 'Èáë', 'Âúü'];
  const weekday = weekdays[d.getDay()];
  return { year, month, day, weekday };
};

const dateInfo = formatDate(date);
---

{slug ? (
  <a href={`/events/${slug}`} class="schedule-card-link">
    <article class="schedule-card">
      <div
        class={`card-header ${images && images.length > 0 ? 'has-image' : 'stripe-pattern'}`}
        style={images && images.length > 0 ? `background-image: url('${images[0]}')` : ''}
      >
        <div class="date-badge">
          <span class="date-year">{dateInfo.year}</span>
          <span class="date-main">{dateInfo.month}/{dateInfo.day}</span>
          <span class="date-weekday">({dateInfo.weekday})</span>
        </div>
        <h3 class="card-title">{title}</h3>
      </div>

      <div class="card-body">
        <div class="venue-info">
          <span class="venue-icon">üìç</span>
          <span class="venue-name">{site}</span>
        </div>

        {content && (
          <pre class="event-details">{content}</pre>
        )}
      </div>
    </article>
  </a>
) : (
  <article class="schedule-card">
    <div
      class={`card-header ${images && images.length > 0 ? 'has-image' : 'stripe-pattern'}`}
      style={images && images.length > 0 ? `background-image: url('${images[0]}')` : ''}
    >
      <div class="date-badge">
        <span class="date-year">{dateInfo.year}</span>
        <span class="date-main">{dateInfo.month}/{dateInfo.day}</span>
        <span class="date-weekday">({dateInfo.weekday})</span>
      </div>
      <h3 class="card-title">{title}</h3>
    </div>

    <div class="card-body">
      <div class="venue-info">
        <span class="venue-icon">üìç</span>
        <span class="venue-name">{site}</span>
      </div>

      {content && (
        <pre class="event-details">{content}</pre>
      )}
    </div>
  </article>
)}

<style>
