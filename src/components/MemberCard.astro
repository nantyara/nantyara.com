      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4), 0 0 25px rgba(0, 255, 136, 0.8);
    }
  }

  .polaroid-frame.gyro-enabled {
    transition: transform 0.1s ease-out;
  }
</style>

<script>
  function initGyroCards() {
    const cards = document.querySelectorAll('.member-card');

    cards.forEach((card) => {
      const toggle = card.querySelector('.gyro-toggle');
      const frame = card.querySelector('.polaroid-frame') as HTMLElement | null;
      let isGyroActive = false;

      if (!toggle || !frame) return;

      toggle.addEventListener('click', async () => {
        if (isGyroActive) {
          // „Ç™„Éï„Å´„Åô„Çã
          isGyroActive = false;
          toggle.classList.remove('gyro-active');
          frame.classList.remove('gyro-enabled');
          frame.style.transform = '';
          toggle.setAttribute('aria-label', '„Ç´„Éº„Éâ„ÅÆÂÇæ„ÅçÊ§úÁü•„ÇíÊúâÂäπ„Å´„Åô„Çã');
          return;
        }

        // iOS 13+ „ÅØË®±ÂèØ„ÅåÂøÖË¶Å
        if (typeof DeviceOrientationEvent !== 'undefined' &&
            typeof (DeviceOrientationEvent as any).requestPermission === 'function') {
          try {
            const permission = await (DeviceOrientationEvent as any).requestPermission();
            if (permission !== 'granted') {
              alert('ÂÇæ„ÅçÊ§úÁü•„Çí‰Ωø„ÅÜ„Å´„ÅØË®±ÂèØ„ÅåÂøÖË¶Å„Åß„Åô');
              return;
            }
          } catch (e) {
            console.error('Permission request failed:', e);
            return;
          }
        }

        // „Ç∏„É£„Ç§„É≠„Çª„É≥„Çµ„Éº„Åå‰Ωø„Åà„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
        if (!window.DeviceOrientationEvent) {
          alert('„Åì„ÅÆ„Éá„Éê„Ç§„Çπ„Åß„ÅØÂÇæ„ÅçÊ§úÁü•„Åå‰Ωø„Åà„Åæ„Åõ„Çì');
          return;
        }

        isGyroActive = true;
        toggle.classList.add('gyro-active');
        frame.classList.add('gyro-enabled');
        toggle.setAttribute('aria-label', '„Ç´„Éº„Éâ„ÅÆÂÇæ„ÅçÊ§úÁü•„ÇíÁÑ°Âäπ„Å´„Åô„Çã');

        // ÂÇæ„ÅçÊ§úÁü•„Ç§„Éô„É≥„Éà
        const handleOrientation = (event: DeviceOrientationEvent) => {
          if (!isGyroActive) return;

          const gamma = event.gamma || 0; // Â∑¶Âè≥„ÅÆÂÇæ„Åç (-90 ~ 90)
          const beta = event.beta || 0;   // ÂâçÂæå„ÅÆÂÇæ„Åç (-180 ~ 180)

          // ÂÇæ„Åç„ÇíÂà∂Èôê„Åó„Å¶Ëá™ÁÑ∂„Å™Âãï„Åç„Å´„Åô„Çã
          const rotateY = Math.max(-15, Math.min(15, gamma * 0.5));
          const rotateX = Math.max(-10, Math.min(10, (beta - 45) * 0.3));

          frame.style.transform =
            `perspective(500px) rotateX(${-rotateX}deg) rotateY(${rotateY}deg)`;
        };

        window.addEventListener('deviceorientation', handleOrientation);

        // „Ç´„Éº„Éâ„ÅåDOM„Åã„ÇâÊ∂à„Åà„Åü„Çâ„Ç§„Éô„É≥„Éà„ÇíÂâäÈô§
        const observer = new MutationObserver(() => {
          if (!document.contains(card)) {
            window.removeEventListener('deviceorientation', handleOrientation);
            observer.disconnect();
          }
        });
        observer.observe(document.body, { childList: true, subtree: true });
      });
    });
  }

  // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å®„Éö„Éº„Ç∏ÈÅ∑ÁßªÊôÇ„Å´ÂàùÊúüÂåñ
  document.addEventListener('DOMContentLoaded', initGyroCards);
  document.addEventListener('astro:page-load', initGyroCards);
</script>
