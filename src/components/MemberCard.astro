    }

    .polaroid-frame {
      padding: 8px;
      padding-bottom: 40px;
    }

    .member-name {
      font-size: 0.95rem;
    }

    .join-date {
      font-size: 0.75rem;
    }

    .member-bio {
      font-size: 0.8rem;
      padding: 10px;
    }

    .social-button {
      width: 44px;
      height: 44px;
      font-size: 1.2rem;
    }

