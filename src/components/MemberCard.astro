    width: 100%;
    aspect-ratio: 1;
    background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 2px;
  }

  .placeholder-icon {
    font-size: 4rem;
    opacity: 0.3;
  }

  .polaroid-caption {
    margin-top: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 30px;
  }

  .member-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--bg-dark);
    text-align: center;
    font-family: 'RocknRoll One', var(--font-digital);
    letter-spacing: 2px;
    text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.8);
  }


  /* „Çπ„ÉÜ„ÉÉ„Ç´„Éº„Éê„ÉÉ„Ç∏ */
