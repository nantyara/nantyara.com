---
interface Props {
  name: string;
  nickname?: string;
  image?: string;
  bio?: string;
  social?: {
    twitter?: string;
    instagram?: string;
    tiktok?: string;
    note?: string;
    fantia?: string;
  };
  color?: string;
}

const { name, nickname, image, bio, social, color = '#FF69B4' } = Astro.props;
---

<article class="member-card" style={`--member-color: ${color}`}>
  <div class="polaroid-frame">
    {image ? (
      <img
        src={image}
        alt={nickname || name}
        class="member-image"
        loading="lazy"
        width="300"
        height="300"
      />
    ) : (
      <div class="member-image-placeholder">
        <span class="placeholder-icon">üë§</span>
      </div>
    )}

    <div class="polaroid-caption">
      <div class="member-name">{nickname || name}</div>
    </div>

    <button class="sticker-badge gyro-toggle" type="button" aria-label="„Ç´„Éº„Éâ„ÅÆÂÇæ„ÅçÊ§úÁü•„ÇíÊúâÂäπ„Å´„Åô„Çã">
      ‚ú®
    </button>
  </div>

  {bio && (
    <pre class="member-bio">{bio}</pre>
  )}

  {social && (
    <div class="social-links">
      {social.twitter && (
        <a
          href={social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="social-button twitter"
        >
          ùïè
        </a>
      )}
      {social.instagram && (
        <a
          href={social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="social-button instagram"
        >
          üì∑
        </a>
      )}
      {social.tiktok && (
        <a
          href={social.tiktok}
          target="_blank"
          rel="noopener noreferrer"
          class="social-button tiktok"
        >
          üéµ
        </a>
      )}
      {social.note && (
        <a
          href={social.note}
          target="_blank"
          rel="noopener noreferrer"
          class="social-button note"
          aria-label="note"
        >
          <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="24" height="24">
            <title>note</title>
            <path d="M0 .279c4.623 0 10.953-.235 15.498-.117 6.099.156 8.39 2.813 8.468 9.374.077 3.71 0 14.335 0 14.335h-6.598c0-9.296.04-10.83 0-13.759-.078-2.578-.814-3.807-2.795-4.041-2.097-.235-7.975-.04-7.975-.04v17.84H0Z"/>
          </svg>
        </a>
      )}
      {social.fantia && (
        <a
          href={social.fantia}
          target="_blank"
          rel="noopener noreferrer"
          class="social-button fantia"
          aria-label="Fantia"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" width="22" height="22">
            <path d="M5 3h14v5H10v3h7v4h-7v6H5V3z"/>
