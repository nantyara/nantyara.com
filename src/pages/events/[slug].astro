---
import Layout from '../../layouts/Layout.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import { loadAllSchedules } from '../../utils/schedules';

export async function getStaticPaths() {
  const schedules = loadAllSchedules();

  return schedules
    .filter((s: any) => s.slug) // slug„Åå„ÅÇ„Çã„Ç§„Éô„É≥„Éà„ÅÆ„Åø
    .map((schedule: any) => ({
      params: { slug: schedule.slug },
      props: { schedule },
    }));
}

interface ScheduleType {
  date: string;
  end?: string;
  title: string;
  site: string;
  content?: string;
  images?: string[];
  slug: string;
}

const { schedule } = Astro.props as { schedule: ScheduleType };
const { date, end, title, site, content, images } = schedule;

// Êó•‰ªò„Éï„Ç©„Éº„Éû„ÉÉ„ÉàÔºàÊó•Êú¨ÊôÇÈñì„ÅßÁµ±‰∏ÄÔºâ
const eventDate = new Date(date);
const formatDate = (d: Date) => {
  const formatter = new Intl.DateTimeFormat('ja-JP', {
    timeZone: 'Asia/Tokyo',
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    weekday: 'short',
    hour: '2-digit',
    minute: '2-digit',
    hour12: false
  });

  const parts = formatter.formatToParts(d);
  const year = parts.find(p => p.type === 'year')?.value;
  const month = parts.find(p => p.type === 'month')?.value;
  const day = parts.find(p => p.type === 'day')?.value;
  const weekday = parts.find(p => p.type === 'weekday')?.value;
  const hour = parts.find(p => p.type === 'hour')?.value;
  const minute = parts.find(p => p.type === 'minute')?.value;

  return `${year}Âπ¥${month}Êúà${day}Êó•(${weekday}) ${hour}:${minute}`;
};

// Google CalendarÁî®„ÅÆÊó•‰ªò„Éï„Ç©„Éº„Éû„ÉÉ„ÉàÔºàYYYYMMDDTHHmmSSZ - Êó•Êú¨ÊôÇÈñìÔºâ
const formatGoogleCalDate = (d: Date) => {
  const formatter = new Intl.DateTimeFormat('ja-JP', {
    timeZone: 'Asia/Tokyo',
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
    hour12: false
  });

  const parts = formatter.formatToParts(d);
  const year = parts.find(p => p.type === 'year')?.value;
  const month = parts.find(p => p.type === 'month')?.value;
  const day = parts.find(p => p.type === 'day')?.value;
  const hour = parts.find(p => p.type === 'hour')?.value;
  const minute = parts.find(p => p.type === 'minute')?.value;

  return `${year}${month}${day}T${hour}${minute}00`;
};

// „Ç§„Éô„É≥„ÉàÁµÇ‰∫ÜÊôÇÂàªÔºàend„Éï„Ç£„Éº„É´„Éâ„Åå„ÅÇ„Çå„Å∞„Åù„Çå„Çí‰ΩøÁî®„ÄÅ„Å™„Åë„Çå„Å∞ÈñãÂßã„Åã„Çâ4ÊôÇÈñìÂæåÔºâ
const eventEndDate = end ? new Date(end) : new Date(eventDate.getTime() + 4 * 60 * 60 * 1000);

// Google Calendar URL
const googleCalendarUrl = new URL('https://calendar.google.com/calendar/render');
googleCalendarUrl.searchParams.set('action', 'TEMPLATE');
googleCalendarUrl.searchParams.set('text', title);
googleCalendarUrl.searchParams.set('dates', `${formatGoogleCalDate(eventDate)}/${formatGoogleCalDate(eventEndDate)}`);
googleCalendarUrl.searchParams.set('details', content || '');
googleCalendarUrl.searchParams.set('location', site);
googleCalendarUrl.searchParams.set('ctz', 'Asia/Tokyo');

// OGPÁî®
const ogTitle = `${title} | „Å™„Çì„Å°„ÇÉ„Çâ„Ç¢„Ç§„Éâ„É´`;
const ogDescription = `${formatDate(eventDate)} @ ${site}`;
const ogImage = images && images.length > 0
  ? `https://nantyara.com${images[0]}`
  : 'https://nantyara.com/img/ogp-default.png';
---

<Layout title={ogTitle}>
  <Fragment slot="head">
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="event" />
    <meta property="og:url" content={`https://nantyara.com/events/${schedule.slug}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />
    <meta name="twitter:image" content={ogImage} />
  </Fragment>

  <article class="event-detail">
    <div
      class={`event-header ${images && images.length > 0 ? 'has-image' : ''}`}
      style={images && images.length > 0 ? `background-image: url('${images[0]}')` : ''}
    >
      <h1 class="event-title">{title}</h1>
      <div class="event-date">{formatDate(eventDate)}</div>
    </div>

    <div class="event-info">
      <div class="venue-section">
        <h2 class="section-title">‰ºöÂ†¥</h2>
        <p class="venue-name">üìç {site}</p>
      </div>

      <div class="calendar-section">
        <a href={googleCalendarUrl.toString()} target="_blank" rel="noopener noreferrer" class="calendar-button">
          üìÖ Google„Ç´„É¨„É≥„ÉÄ„Éº„Å´ËøΩÂä†
        </a>
      </div>

      {content && (
        <div class="event-content">
          <h2 class="section-title">Ë©≥Á¥∞</h2>
          <pre class="content-text">{content}</pre>
        </div>
      )}
    </div>

    {images && images.length > 0 && (
      <div class="event-images">
        <h2 class="section-title">ÁîªÂÉè</h2>
        <div class="image-grid">
          {images.map((img: string) => (
            <img src={img} alt={title} loading="lazy" class="event-image" />
          ))}
        </div>
      </div>
    )}

    <div class="share-section">
      <h2 class="section-title">„Ç∑„Çß„Ç¢</h2>
      <ShareButtons
        url={`https://nantyara.com/events/${schedule.slug}`}
        title={title}
        description={`${formatDate(eventDate)} @ ${site}`}
      />
    </div>

    <div class="back-link-wrapper">
      <a href="/#schedule" class="back-link">
        ‚Üê „Çπ„Ç±„Ç∏„É•„Éº„É´‰∏ÄË¶ß„Å´Êàª„Çã
      </a>
    </div>
  </article>
</Layout>

<style>
  .event-detail {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .event-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px;
    background: linear-gradient(135deg, var(--retro-cyan) 0%, var(--retro-purple) 100%);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(255, 110, 199, 0.5);
    border: 2px solid rgba(255, 255, 255, 0.3);
    position: relative;
  }

  .event-header.has-image {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .event-header.has-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    z-index: 0;
  }

  .event-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
    margin: 0 0 15px 0;
    text-shadow: 3px 3px 0 rgba(0, 0, 0, 0.5);
    line-height: 1.3;
    position: relative;
    z-index: 1;
  }

  .event-date {
    font-size: 1.2rem;
    color: var(--retro-yellow);
    font-weight: 700;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
    position: relative;
    z-index: 1;
  }

  .event-info {
    margin-bottom: 40px;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--retro-pink);
    margin: 0 0 20px 0;
    padding-bottom: 10px;
    border-bottom: 3px solid var(--retro-pink);
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  }

  .venue-section {
    margin-bottom: 30px;
    padding: 25px;
    background: rgba(255, 110, 199, 0.1);
    border: 2px solid var(--retro-pink);
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(255, 110, 199, 0.3);
  }

  .venue-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--pastel-pink);
    margin: 0;
  }

  .calendar-section {
    margin-bottom: 30px;
    text-align: center;
  }

  .calendar-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    min-height: 48px;
    background: linear-gradient(135deg, var(--retro-cyan) 0%, var(--retro-purple) 100%);
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    border-radius: 30px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 4px 0 rgba(0, 0, 0, 0.3),
      0 0 20px rgba(0, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .calendar-button:hover {
    transform: translateY(-2px);
    box-shadow:
      0 6px 0 rgba(0, 0, 0, 0.3),
      0 0 30px rgba(0, 255, 255, 0.7);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .calendar-button:active {
    transform: translateY(0);
    box-shadow:
      0 2px 0 rgba(0, 0, 0, 0.3),
      0 0 20px rgba(0, 255, 255, 0.5);
  }

  .event-content {
    margin-bottom: 30px;
  }

  .content-text {
    font-family: var(--font-base);
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-light);
    margin: 0;
    padding: 20px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px;
    border: 2px solid rgba(255, 110, 199, 0.3);
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .event-images {
    margin-bottom: 40px;
  }

  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .event-image {
    width: 100%;
    height: auto;
    max-height: 600px;
    object-fit: contain;
    border-radius: 8px;
    border: 3px solid var(--retro-cyan);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .event-image:hover {
    transform: scale(1.02);
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.8);
  }

  .back-link-wrapper {
    margin-top: 40px;
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background: linear-gradient(135deg, var(--retro-purple) 0%, var(--retro-pink) 100%);
    color: white;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 25px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 4px 0 rgba(0, 0, 0, 0.3),
      0 0 15px rgba(255, 110, 199, 0.4);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    transform: translateY(-2px);
    box-shadow:
      0 6px 0 rgba(0, 0, 0, 0.3),
      0 0 25px rgba(255, 110, 199, 0.6);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .back-link:active {
    transform: translateY(0);
    box-shadow:
      0 2px 0 rgba(0, 0, 0, 0.3),
      0 0 15px rgba(255, 110, 199, 0.4);
  }

  /* „É¨„Çπ„Éù„É≥„Ç∑„ÉñÂØæÂøú */
  @media (max-width: 768px) {
    .event-detail {
      padding: 30px 16px;
    }

    .event-header {
      padding: 25px 20px;
    }

    .event-title {
      font-size: 2rem;
    }

    .event-date {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.3rem;
    }

    .venue-section {
      padding: 20px;
    }

    .venue-name {
      font-size: 1.1rem;
    }

    .content-text {
      font-size: 0.9rem;
      padding: 16px;
    }

    .calendar-button {
      font-size: 1rem;
      padding: 12px 24px;
      min-height: 44px;
    }

    .image-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .event-detail {
      padding: 20px 12px;
    }

    .event-header {
      padding: 20px 16px;
    }

    .event-title {
      font-size: 1.6rem;
    }

    .event-date {
      font-size: 0.9rem;
    }

    .section-title {
      font-size: 1.2rem;
    }

    .venue-section {
      padding: 16px;
    }

    .venue-name {
      font-size: 1rem;
    }

    .content-text {
      font-size: 0.85rem;
      padding: 14px;
    }

    .calendar-button {
      font-size: 0.95rem;
      padding: 12px 20px;
      min-height: 42px;
      width: 100%;
    }
  }

  /* „Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ÁÑ°ÂäπÂåñÔºà„Ç¢„ÇØ„Çª„Ç∑„Éì„É™„ÉÜ„Ç£Ôºâ */
  @media (prefers-reduced-motion: reduce) {
    .event-image,
    .calendar-button,
    .back-link {
      transition: none !important;
    }

    .event-image:hover,
    .calendar-button:hover,
    .back-link:hover {
      transform: none;
    }
  }
</style>
