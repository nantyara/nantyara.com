---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'node:fs';
import { parse } from 'yaml';

const linksYaml = readFileSync('src/data/links.yml', 'utf-8');
const links = parse(linksYaml);

const categories: Record<string, string> = {
  social: 'SNS',
  streaming: '音楽配信',
  video: '動画',
  podcast: 'Podcast',
  store: 'グッズ',
  related: '関連サイト',
};

const categoryIcons: Record<string, string> = {
  social: 'fa-solid fa-share-nodes',
  streaming: 'fa-solid fa-music',
  video: 'fa-solid fa-video',
  podcast: 'fa-solid fa-microphone',
  store: 'fa-solid fa-cart-shopping',
  related: 'fa-solid fa-link',
};

// サービスごとのアイコンとスタイルクラスを取得
const getServiceInfo = (name: string, category: string) => {
  const nameLower = name.toLowerCase();

  // X (Twitter)
  if (nameLower.includes('x') || nameLower.includes('twitter')) {
    return { icon: 'fa-brands fa-x-twitter', class: 'x-link' };
  }
  // Spotify
  if (nameLower.includes('spotify')) {
    return { icon: 'fa-brands fa-spotify', class: 'spotify-link' };
  }
  // Apple Music
  if (nameLower.includes('apple')) {
    return { icon: 'fa-brands fa-apple', class: 'apple-link' };
  }
  // YouTube Music / YouTube
  if (nameLower.includes('youtube')) {
    return { icon: 'fa-brands fa-youtube', class: 'youtube-link' };
  }
  // Facebook
  if (nameLower.includes('facebook')) {
    return { icon: 'fa-brands fa-facebook', class: 'facebook-link' };
  }
  // Instagram
  if (nameLower.includes('instagram')) {
    return { icon: 'fa-brands fa-instagram', class: 'instagram-link' };
  }
  // LINE
  if (nameLower.includes('line')) {
    return { icon: 'fa-brands fa-line', class: 'line-link' };
  }
  // TikTok
  if (nameLower.includes('tiktok')) {
    return { icon: 'fa-brands fa-tiktok', class: 'tiktok-link' };
  }
  // Podcast
  if (nameLower.includes('podcast')) {
    return { icon: 'fa-solid fa-podcast', class: 'podcast-link' };
  }
  // BASE Shop
  if (nameLower.includes('base')) {
    return { icon: 'base-logo', class: 'base-link' };
  }

  // デフォルト
  return { icon: categoryIcons[category] || 'fa-solid fa-link', class: 'default-link' };
};
---

<Layout title="リンク | なんちゃらアイドル">
  {Object.entries(categories).map(([key, label]) => {
    const categoryLinks = links[key];
    if (!categoryLinks || categoryLinks.length === 0) return null;

    return (
      <div class="link-category">
        <h2 class="category-title">
          <i class={categoryIcons[key]}></i>
          {label}
        </h2>
        <div class="link-items">
          {categoryLinks.map((link: any) => {
            const serviceInfo = getServiceInfo(link.name, key);
            return (
              <a href={link.url} target="_blank" rel="noopener noreferrer" class={`link-item ${serviceInfo.class}`}>
                {serviceInfo.icon === 'base-logo' ? (
                  <img src="/icons/base_logo_horizontal_black.png" alt="BASE" class="link-icon base-logo-img" />
                ) : (
                  <i class={`link-icon ${serviceInfo.icon}`}></i>
                )}
                <span class="link-name">{link.name}</span>
                <i class="link-arrow fa-solid fa-arrow-right"></i>
              </a>
            );
          })}
        </div>
      </div>
    );
  })}
</Layout>

<style>
  .link-category {
    max-width: 900px;
    margin: 0 auto 50px;
    padding: 0 20px;
  }

  .category-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    font-size: 2rem;
    font-weight: 900;
    color: var(--text-light);
    text-shadow:
      2px 2px 0 var(--retro-pink),
      4px 4px 0 var(--retro-cyan),
      6px 6px 0 var(--retro-purple);
    margin: 0 0 30px 0;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .category-title i {
    font-size: 2.5rem;
    filter: drop-shadow(0 0 10px rgba(255, 110, 199, 0.8));
  }

  .link-items {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }

  .link-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px 25px;
    background: linear-gradient(135deg, var(--retro-purple) 0%, var(--retro-pink) 100%);
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 15px;
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
    box-shadow:
      0 4px 0 rgba(0, 0, 0, 0.3),
      0 0 20px rgba(255, 110, 199, 0.5);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    min-height: 48px;
  }

  .link-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .link-item:hover::before {
    left: 100%;
  }

  .link-item:hover {
    transform: translateY(-4px);
    box-shadow:
      0 8px 0 rgba(0, 0, 0, 0.3),
      0 0 30px rgba(255, 110, 199, 0.8),
      0 0 50px rgba(0, 255, 255, 0.4);
    border-color: var(--retro-cyan);
  }

  .link-icon {
    font-size: 1.8rem;
    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.5));
  }

  .base-logo-img {
    height: 32px;
    width: auto;
    filter: none;
  }

  .link-name {
    flex: 1;
  }

  .link-arrow {
    font-size: 1.3rem;
    transition: transform 0.3s ease;
  }

  .link-item:hover .link-arrow {
    transform: translateX(5px);
  }

  /* 各サービスの公式ブランドカラー */
  .x-link {
    background: #000000;
  }

  .x-link:hover {
    background: #1a1a1a;
  }

  .spotify-link {
    background: #1DB954;
  }

  .spotify-link:hover {
    background: #1ed760;
  }

  .apple-link {
    background: linear-gradient(135deg, #FA243C 0%, #FF6B81 100%);
  }

  .apple-link:hover {
    background: linear-gradient(135deg, #FF6B81 0%, #FA243C 100%);
  }

  .youtube-link {
    background: #FF0000;
  }

  .youtube-link:hover {
    background: #cc0000;
  }

  .facebook-link {
    background: #1877F2;
  }

  .facebook-link:hover {
    background: #0c63d4;
  }

  .instagram-link {
    background: linear-gradient(135deg, #833AB4 0%, #FD1D1D 50%, #FCAF45 100%);
  }

  .instagram-link:hover {
    background: linear-gradient(135deg, #FCAF45 0%, #FD1D1D 50%, #833AB4 100%);
  }

  .line-link {
    background: #06C755;
  }

  .line-link:hover {
    background: #05b04b;
  }

  .tiktok-link {
    background: #000000;
    border-color: #00F2EA;
  }

  .tiktok-link:hover {
    background: #1a1a1a;
    box-shadow:
      0 8px 0 rgba(0, 0, 0, 0.3),
      0 0 30px rgba(0, 242, 234, 0.8);
  }

  .podcast-link {
    background: linear-gradient(135deg, #9933CC 0%, #6B1FA0 100%);
  }

  .podcast-link:hover {
    background: linear-gradient(135deg, #6B1FA0 0%, #9933CC 100%);
  }

  .base-link {
    background: #FFFFFF;
    color: #000000;
    border-color: #E0E0E0;
  }

  .base-link:hover {
    background: #F5F5F5;
    border-color: #CCCCCC;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .category-title {
      font-size: 1.6rem;
      gap: 12px;
    }

    .category-title i {
      font-size: 2rem;
    }

    .link-items {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .link-item {
      padding: 18px 20px;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .link-category {
      padding: 0 10px;
      margin-bottom: 40px;
    }

    .category-title {
      font-size: 1.4rem;
      gap: 10px;
      text-shadow:
        2px 2px 0 var(--retro-pink),
        4px 4px 0 var(--retro-cyan);
    }

    .category-title i {
      font-size: 1.8rem;
    }

    .link-item {
      padding: 16px 18px;
      font-size: 0.95rem;
      gap: 12px;
      min-height: 44px;
    }

    .link-icon {
      font-size: 1.5rem;
    }

    .link-arrow {
      font-size: 1.2rem;
    }
  }

  /* アニメーション無効化（アクセシビリティ） */
  @media (prefers-reduced-motion: reduce) {
    .link-item,
    .link-item::before,
    .link-arrow {
      transition: none !important;
    }

    .link-item:hover {
      transform: none;
    }

    .link-item:hover .link-arrow {
      transform: none;
    }

    .link-item:hover::before {
      left: -100%;
    }
  }
</style>
